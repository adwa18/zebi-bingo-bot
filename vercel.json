{
  "version": 2,
  "builds": [
    {
      "src": "bot.py",
      "use": "@vercel/python",
      "config": { "command": "gunicorn bot:app" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(html|css|js|ico))",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "bot.py"
    }
  ]
}