{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/webhook",
      "destination": "/api/bot.py"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "functions": {
    "api/bot.py": {
      "maxDuration": 10
    }
  },
  "env": {
    "PYTHON_VERSION": "3.12",
    "TELEGRAM_BOT_TOKEN": "8184706551:AAH079DGSkLn0efQPqm2yYm5l1Aqg1uiGOk",
    "WEB_APP_URL": "https://zebi-bingo-bot.vercel.app",
